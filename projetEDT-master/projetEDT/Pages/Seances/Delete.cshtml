        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Seance.HeureDebut)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Seance.HeureDebut)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Seance.Duree)
        </dt>
        <dd class="col-sm-10">
